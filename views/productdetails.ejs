	<style type="text/css">
		body{
			background-color: #ffffff;
		}
		h1{
			padding: auto;
			text-align: center;
			color: #000000;
			font-weight: normal;
			padding-top: 150px;
			font-size: 75px;
		}
		/*button{
			float: left;
			color: #4682b4;
			background-color: white;
			height: 25px;
		}*/
		button{
			margin-left: 5px;
		}
		.row{
			text-align: center;
		}
		h3{
			font-weight: bold;
		}
	</style>
</head>
<body>
        <div>
                <figure class="figure">
                    <h3 ><%= products[i].category %></h3>
                    <h4><%= products[i].subcategory %></h4>
                    <h4><%= products[i].subsubcategory %></h4>
                    <div>Name: <%= products[i].name %></div>
                    <div>Price: <%= products[i].price %>INR</div>
                      <img align="middle" src="<%= products[i].image %>" class=" figure-img img-fluid rounded img-thumbnail" alt="A generic square placeholder image with rounded corners in a figure.">
                      <br>
                      <br>
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Feature</th>
                            <th>Description</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var j=0;j<products[i].feature.length;j++){ %>
                          <% if(products[i].value[j]!=''){ %>
                          <tr>
                            <td><%= products[i].feature[j] %></td>
                            <td><%= products[i].value[j]	%></td>
                          </tr>
                          <% } %>
                            <% } %>
                        </tbody>
                      </table>
                      <br>
                      <a href="/coming_soon"><button class="btn btn-dark">Buy</button></a>
                </figure>
            </div>
            
            <%}%>
        </div>
</body>
</html>